<h1>Listing Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Type</th>
    <th>Active</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= link_to user.role, toggle_type_path(user), method:"patch" %></td>
      <td><%= link_to user.active.to_s, toggle_status_path(user), method:"patch" %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New User', new_admin_user_path %>
<%= link_to 'Logout', destroy_user_session_path, method:"delete" %>
<h1>Listing Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
    <th>Active</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to titalize(user.username), admin_user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= titalize(user.role) %></td>
      <td><%= link_to boolean_to_string(user.active), toggle_active_admin_user_path(user), method: :patch %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New User', new_admin_user_path %>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>

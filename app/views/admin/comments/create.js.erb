$(".form-group").removeClass("has-danger");
$(".notice").remove();

<% if @comment.errors[:body].any? %>
  $("#body_block").append('<%= errors_div @comment, :body %>');
  $("#body_block").closest(".form-group").addClass("has-danger");
<% else %>
  showNotification('success', 'Comment was created successfully.', 'done')
  $(".comments .comment-holder").append('<%=j render "admin/comments/comment", resource: @commentable, comment: @comment %>')
  $("#comment_body").val("")
<% end %>

<%= form_for [:admin, project, payment], remote: true do |f| %>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :amount, class: "bmd-label-floating" %>
      <%= f.number_field :amount, class: "form-control" %>
      <span id="amount_block" class="help-block"></span>
    </div>

    <%= f.submit class: "btn btn-primary pull-right" %>
  </div>
<% end %>

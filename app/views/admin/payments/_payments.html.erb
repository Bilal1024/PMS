<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Payments
        <a class="pull-right" href="#" data-toggle="modal" data-target="#payment_modal">
          <i class="material-icons">add</i>
        </a>
      </h4>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover payments">
        <thead class="text-primary">
          <th>Amount</th>
          <th>Delete</th>
        </thead>
        <tbody>
          <% project.payments.each do |payment| %>
            <tr>
              <td>
                <%= best_in_place [:admin, project, payment], :amount, as: :input, html_attrs: { type: :number }, inner_class: "form-control", class: "btn btn-primary btn-link btn-sm" %>
              </td>
              <td>
                <%= link_to admin_project_payment_path(project, payment), { rel: "tooltip", title: "Delete Payment", class: "btn btn-primary btn-link btn-sm", method: :delete, data: { confirm: 'Are you sure?' } }  do %>
                  <i class="material-icons">delete</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="modal" id="payment_modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Add Payment</h4>
            <button type="button" class="close btn btn-link" data-dismiss="modal">
              <i class="material-icons">close</i>
            </button>
          </div>

          <div class="modal-body">
            <%= render 'admin/payments/form', project: project, payment: project.payments.build %>
          </div>

          <div class="container">
            <div class="row">
              <div class="col-md-12 errors"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

$(".form-group").removeClass("has-danger");
$(".notice").remove();

<% if @payment.errors.any? %>
  <% if @payment.errors[:amount].any? %>
    $("#amountBlock").append('<%=j render "shared/errors", resource: @payment, field: :amount %>');
    $("#amountBlock").closest(".form-group").addClass("has-danger");
  <% end %>
<% else %>
  $('.flash').html("<%= j render 'shared/flash', flash: flash %>");
  $(".payments tbody").append('<%=j render "admin/payments/payment", project: @project, payment: @payment %>')
  $("#PaymentModal").modal("toggle");
  $("#PaymentModal input").each(function (){
    $(this).val("");
  })
<% end %>

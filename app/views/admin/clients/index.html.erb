<h2>Clients</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @clients.each do |client| %>
    <tr>
      <td><%= link_to titleize(client.name), client_path(client) %></td>
      <td><%= link_to 'Edit', edit_admin_client_path(client) %></td>
      <td><%= link_to 'Delete', admin_client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Client', new_admin_client_path %>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>

<%= form_for [:admin, @client] do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="<%= error_class(@client, :name) %>">
        <%= f.label :name, class: "bmd-label-floating" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= errors_div @client, :name %>
      </div>
    </div>
  </div>

  <%= f.submit class: "btn btn-primary col-md-12" %>

  <div class="link">
    <%= link_to 'Back', admin_clients_path %>
  </div>
<% end %>

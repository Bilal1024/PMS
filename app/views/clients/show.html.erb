<div class="offset-md-2 col-md-8">
  <div class="card card-profile">
    <div class="card-avatar">
       <%= image_tag "faces/marc.jpg" %> />
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= titleize(@client.name) %></h4>
      <p class="card-description">

      </p>
      <%= link_to "Edit", edit_client_path(@client), class: "btn btn-primary btn-round" %>
      <%= link_to "Delete", client_path(@client), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-round" %>
    </div>
  </div>
</div>

<div class="col-lg-12 col-md-12">
  <%= render 'shared/flash' %>
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Projects</h4>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead class="text-primary">
          <th>Name</th>
          <th>Earnings</th>
        </thead>
        <tbody>
          <% @client.projects.each do |project| %>
            <tr>
              <td>
                <%= link_to titleize(project.name), project_path(project) %>
              </td>
              <td>
                <%= project.total_earnings %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="link">
    <%= link_to 'Back', clients_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Time Logs</h4>
      <p class="card-category">List of hours spent against <%= project.name %></p>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead class="text-primary">
          <th>By</th>
          <th>Hours</th>
        </thead>
        <tbody>
          <% project.time_logs.each do |time_log| %>
            <tr>
              <td>
                <%= time_log.user.username %>
              </td>
              <td>
                <div class="dropdown">
                  <%= best_in_place_if authenticate_user(time_log), [project, time_log], :hours, as: :input, html_attrs: { type: :number }, aria: { haspopup:"true", expanded: "false" }, data: { toggle: "dropdown" }, id: "navbarDropdownMenuLink", inner_class: "form-control", rel: "tooltip", title: "Click for options", class: "btn btn-primary btn-link btn-sm", activator: "#activator-#{time_log.id}" %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <%= link_to "#", { class: "dropdown-item", id:"activator-#{time_log.id}" } do %>
                      <i class="material-icons">edit</i>
                      Edit Log
                    <% end %>
                    <%= link_to project_time_log_path(project, time_log), { class: "dropdown-item", method: :delete } do %>
                      <i class="material-icons">delete</i>
                      Delete Log
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= render 'time_logs/form', project: project, time_log: project.time_logs.build %>
  </div>
</div>

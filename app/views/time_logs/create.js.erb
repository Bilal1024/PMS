$(".form-group").removeClass("has-danger");
$(".notice").remove();

<% if @time_log.errors.any? %>
  <% if @time_log.errors[:hours].any? %>
    <% @time_log.errors[:hours].each do |error| %>
        $("#hoursBlock").append('<div class="notice text-danger"><%=j error%></div>');
      <% end %>
      $("#hoursBlock").closest(".form-group").addClass("has-danger");
  <% end %>
<% else %>
  $('.flash').html("<%= j render 'shared/flash', flash: flash %>");
  <% flash.discard %>
  $(".time_logs tbody").append('<%=j render "time_logs/time_log", project: @project, time_log: @time_log %>')
  $("#TimeLogModal").modal("toggle");
  $("#TimeLogModal input").each(function (){
    $(this).val("");
  })
<% end %>

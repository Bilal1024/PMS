<!DOCTYPE html>
<html>
  <head>
    <title>PMS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag  'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8" />
    <%= yield :script %>
  </head>

  <body>
    <div class="wrapper ">
      <div class="sidebar" data-color="purple" data-background-color="white" data-image=<%= asset_path 'sidebar-1.jpg' %>>
        <div class="logo">
          <%= link_to "PMS", root_url, { class: "simple-text logo-normal" } %>
        </div>

        <div class="sidebar-wrapper">
          <ul class="nav">
            <li class="nav-item">
              <%= link_to root_url, { class: "nav-link" } do %>
                <i class="material-icons">group_work</i>
                <p>Projects</p>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to root_url, { class: "nav-link" } do %>
                <i class="material-icons">person</i>
                <p>Users</p>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to root_url, { class: "nav-link" } do %>
                <i class="material-icons">work</i>
                <p>Clients</p>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <div class="main-panel">
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
          <div class="container-fluid">
            <div class="navbar-wrapper" /></div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
              <span class="sr-only">Toggle navigation</span>
              <span class="navbar-toggler-icon icon-bar"></span>
              <span class="navbar-toggler-icon icon-bar"></span>
              <span class="navbar-toggler-icon icon-bar"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end">
              <form class="navbar-form">
                <div class="input-group no-border">
                </div>
              </form>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, { class: "nav-link", method: :delete } do %>
                    <i class="material-icons">logout</i>
                    <p class="d-lg-none d-md-block">
                      Logout
                    </p>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

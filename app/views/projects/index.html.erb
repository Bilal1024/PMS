<div class="col-lg-12 col-md-12">
  <%= render 'shared/flash' %>
  <div class="card">
    <div class="card-header card-header-tabs card-header-primary">
      <h4 class="card-title">Projects Listing</h4>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead class="text-primary">
          <th>Name</th>
          <th>By</th>
          <th>Earnings</th>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td>
                <%= link_to titleize(project.name), project_path(project) %>
              </td>
              <td>
                <%= link_to titleize(project.client.name), client_path(project.client) %>
              </td>
              <td>
                <%= project.total_earnings %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Project', new_project_path, class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>

<div class="offset-md-2 col-md-8">
  <div class="card">
    <div class="card-header card-header-primary">
      <h4 class="card-title">Edit Profile</h4>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
        <% if resource.errors.any? %>
          <div class="row">
            <div class="col-md-12">
              <div class="alert alert-danger">
                <%= devise_error_messages! %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :username, class: "bmd-label-floating" %>
              <%= f.text_field :username, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :email, class: "bmd-label-floating" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password, class: "bmd-label-floating" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password_confirmation, class: "bmd-label-floating" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :current_password, class: "bmd-label-floating" %>
              <%= f.password_field :current_password, class: "form-control" %>
            </div>
          </div>
        </div>

        <%= f.fields_for :attachment do |picture| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= picture.label :avatar, class: "bmd-label-floating" %>
                <%= picture.file_field :avatar, class: "form-control" %>
              </div>
            </div>
          </div>
        <% end %>

        <%= f.submit "Update", class: "btn btn-primary col-md-12" %>

        <div class="link">
          <%= link_to "Back to Home!", url_for_root %>
        </div>
      <% end %>
    </div>
  </div>
</div>
